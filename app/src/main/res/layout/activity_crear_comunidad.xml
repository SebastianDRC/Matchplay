<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crea_comunidad"
    tools:context=".Crear_Comunidad">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/crea_comunidad"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="Deporte"
        android:textColor="#EFEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="54dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="360dp"
        android:layout_height="118dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView55"
        app:srcCompat="@drawable/rectangle" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fondo_escribir" />

    <ImageButton
        android:id="@+id/iniciarlogin"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:backgroundTint="#FFFFFF"
        android:rotationX="-360"
        android:rotationY="-360"
        app:circularflow_angles="60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="?attr/homeAsUpIndicator" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00DE2121"
        android:backgroundTint="#00262222"
        android:src="@drawable/crea_tu_comunidad"
        app:layout_constraintTop_toBottomOf="@+id/iniciarlogin"
        tools:layout_editor_absoluteX="60dp" />


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView113"
        app:srcCompat="@drawable/fondo_escribir" />

    <ImageView
        android:id="@+id/imageView113"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/fondo_escribir" />

    <EditText
        android:id="@+id/editTextText1"
        android:layout_width="228dp"
        android:layout_height="44dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:hint=""
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.883"
        tools:layout_editor_absoluteX="101dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="243dp"
        android:layout_height="29dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#00C81111"
        android:ems="10"
        android:foregroundTint="#00FFFFFF"
        android:hint=""
        app:layout_constraintBottom_toTopOf="@+id/editTextText3"
        tools:layout_editor_absoluteX="89dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#00BD0606"
        android:ems="10"
        android:hint=""
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        tools:layout_editor_absoluteX="104dp" />

    <EditText
        android:id="@+id/editTextText99"
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00BD0606"
        android:ems="10"
        android:hint=""
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/textView55"
        tools:layout_editor_absoluteX="104dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Nombre"
        android:textColor="#EFEDED"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Deporte"
        android:textColor="#EFEDED"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Nombre Autor"
        android:textColor="#EFEDED"
        app:layout_constraintBottom_toTopOf="@+id/textView55"
        tools:layout_editor_absoluteX="56dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="17dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/fotoComunidad"
        android:layout_width="142dp"
        android:layout_height="123dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/photo"
        tools:layout_editor_absoluteX="134dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="118dp"
        android:layout_height="35dp"
        android:layout_marginTop="123dp"
        android:backgroundTint="#C1D5ED"
        android:text="Seleccione su imagen"
        android:textSize="8sp"
        app:layout_constraintTop_toTopOf="@+id/fotoComunidad"
        tools:layout_editor_absoluteX="144dp" />


</androidx.constraintlayout.widget.ConstraintLayout>